# =====================
# APP SETTINGS
# =====================
APP_NAME=MyNestApp
APP_ENV=development          # development | staging | production
APP_PORT=3000
APP_IP=127.0.0.1             # Server IP or public IP
APP_DEBUG=true               # true | false
API_VERSION=v1               # Example: v1, v2

# =====================
# PLATFORM LINKS
# =====================
PLATFORM_API=https://api.myapp.com
PLATFORM_WEB=https://web.myapp.com
PLATFORM_ADMIN=https://admin.myapp.com
PLATFORM_MOBILE=https://mobile.myapp.com

# =====================
# DATABASE (PostgreSQL example)
# =====================
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=yourpassword
DB_NAME=my_nest_app
DB_SYNCHRONIZE=false         # NEVER true in production
DB_LOGGING=false
DB_MIGRATIONS_RUN=false      # Auto-run migrations on app start (use false and run manually)
DB_MIGRATIONS_TABLE_NAME=migrations_history
# =====================
# FILE STORAGE (S3 / generic compatible)
# =====================
STORAGE_ACCESS_KEY_ID=your_storage_access_key
STORAGE_SECRET_ACCESS_KEY=your_storage_secret_key
STORAGE_REGION=eu-west-1
STORAGE_BUCKET_NAME=my-app-bucket
STORAGE_PROVIDER=s3          # s3 | minio | other cloud storage

# =====================
# EMAIL SETTINGS (SMTP)
# =====================
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=no-reply@example.com
MAIL_SECURE=false             # true if using 465

# =====================
# REDIS CACHE / SESSION
# =====================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# =====================
# JWT / AUTH
# =====================
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=3600           # seconds

# =====================
# OTHER SETTINGS
# =====================
LOG_LEVEL=debug               # debug | info | warn | error
